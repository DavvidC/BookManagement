@model BookManagement.Models.Book

@{
    ViewData["Title"] = "Szczegóły książki";
}

<h1>@Model.Title</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Średnia ocena
        </dt>
        <dd class="col-sm-10">
            @ViewBag.AverageRating
        </dd>
    </dl>
</div>

<div>
    <h4>Dodaj ocenę</h4>
    <form asp-action="AddRating" method="post">
        <div class="form-group">
            <label for="rating">Ocena (1-5)</label>
            <input type="number" id="rating" name="rating" min="1" max="5" class="form-control" required />
        </div>
        <input type="hidden" name="bookId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Dodaj ocenę</button>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
